{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Current Code (ts-node)",
            "type": "shell",
            "command": "ts-node ${relativeFile}",
            "problemMatcher": ["$tsc"],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "promptOnClose": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}